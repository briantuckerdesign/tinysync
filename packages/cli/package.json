{
    "name": "@tinysync/cli",
    "version": "1.0.2",
    "description": "CLI tool for tinysync - sync data between Airtable and Webflow",
    "main": "./src/index.ts",
    "bin": {
        "tinysync": "./src/index.ts"
    },
    "files": [
        "src",
        "README.md",
        "LICENSE.txt"
    ],
    "scripts": {
        "start": "bun src/index.ts",
        "__start:local_warning": "SECURITY: Disables TLS verification. Only use for corporate VPN cert issues during local dev.",
        "start:local": "export NODE_TLS_REJECT_UNAUTHORIZED=0 && bun src/index.ts",
        "test": "bun test"
    },
    "keywords": [
        "bun",
        "cli",
        "airtable",
        "webflow",
        "sync",
        "automation"
    ],
    "author": "Brian Tucker",
    "license": "ISC",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/briantuckerdesign/tinysync.git",
        "directory": "packages/cli"
    },
    "dependencies": {
        "@tinysync/core": "^1.0.0",
        "@clack/prompts": "^1.0.0-alpha.8",
        "@ts-stack/markdown": "^1.5.0",
        "ascii-table3": "^1.0.1",
        "figlet": "^1.9.4",
        "picocolors": "^1.1.1"
    },
    "devDependencies": {
        "@types/bun": "^1.3.4",
        "@types/figlet": "^1.7.0",
        "typescript": "^5.9.3"
    }
}
